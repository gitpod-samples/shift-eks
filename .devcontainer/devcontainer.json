{
	"name": "shift-eks",
	"build": {
		"context": ".",
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
			"version": "latest",
			"helm": "latest",
			"minikube": "none"
		}
	},
	"runArgs": [
		"--privileged"
	],
	"mounts": [
		"source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
	],
	"containerEnv": {
		"KUBECONFIG": "/workspaces/shift-eks/.kube/okd-config:/workspaces/shift-eks/.kube/eks-anywhere-config:/workspaces/shift-eks/.kube/eks-localstack-config"
	}
}
